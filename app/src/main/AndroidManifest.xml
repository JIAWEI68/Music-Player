<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicstream">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicStream">
        <activity android:name=".FavPlayingActivity"></activity>
        <activity android:name=".SearchAdapter" />
        <activity android:name=".SearchActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".PlayList3PlayingActivity" />
        <activity android:name=".PlayList3Adapter" />
        <activity android:name=".PlayList3Activity" />
        <activity android:name=".PlayList2PlayingActivity" />
        <activity android:name=".PlayList2Adapter" />
        <activity android:name=".PlayList2Activity" />
        <activity android:name=".PlayList1PlayingActivity" />
        <activity android:name=".PlayList1Adapter" />
        <activity android:name=".PlayList1Activity" />
        <activity android:name=".PlaylistsActivity" />
        <activity android:name=".SplashScreenActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".FavouritesAdapter" />
        <activity android:name=".FavouritesActivity" />
        <activity android:name=".SongsActivity" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".PlayingActivity" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>